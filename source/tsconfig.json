{
    "compilerOptions": {
        "sourceMap": true,
        "strict": true,
        "module": "es2015",
        "moduleResolution": "node",
        "baseUrl": "src",
        "paths": {
            "@tests/*": [
                "__tests__/*"
            ]
        },
        "lib": [
            "dom",
            "es6",
            "es2017.object"
        ],
        "target": "es2015",
        "experimentalDecorators": true
    },
    "exclude": [
        "**/*.spec.ts"
    ]
}
